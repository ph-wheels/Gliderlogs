<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1100dp"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical"
    android:stretchColumns="0,1,2,3,4,5,6,7"
    android:weightSum="1.0"
    android:windowSoftInputMode="stateVisible|adjustPan" >

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_weight="1"
            android:background="#FF909090"
            android:padding="5dip" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/flight_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/flight_date"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_started"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/flight_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:digits="1234567890:"
            android:hint="@string/flight_started"
            android:inputType="textNoSuggestions"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnChangeSTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:text="@string/flight_time_btn" />

        <Button
            android:id="@+id/btnClearSTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:text="@string/flight_clear_btn" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_registration"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/flight_registration"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/flight_registration" />

        <Button
            android:id="@+id/btn_ext_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_regi_btn" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_landed"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/flight_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:digits="1234567890:"
            android:hint="@string/flight_landed"
            android:inputType="textNoSuggestions"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnChangeLTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:text="@string/flight_time_btn" />

        <Button
            android:id="@+id/btnClearLTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:text="@string/flight_clear_btn" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_pilot"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/flight_pilot"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/flight_pilot" />

        <Button
            android:id="@+id/btn_ext_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_regi_btn" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_duration"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/flight_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:hint="@string/flight_duration"
            android:inputType="none"
            android:singleLine="true" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_copilot"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/flight_copilot"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/flight_copilot" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_instruction"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/flight_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <!-- holding for start -->
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <!-- holding for landing -->
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <!-- holding for duration -->
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <!-- holding for instruction -->
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView5b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_launch"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/flight_launch_winch"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".27"
            android:checked="true"
            android:onClick="onCB_G2_Clicked"
            android:text="@string/flight_winch" />

        <CheckBox
            android:id="@+id/flight_launch_tow"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".27"
            android:onClick="onCB_G2_Clicked"
            android:text="@string/flight_tow" />

        <CheckBox
            android:id="@+id/flight_launch_motor"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".27"
            android:onClick="onCB_G2_Clicked"
            android:text="@string/flight_motor" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_notes"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/flight_edit_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_span="2"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
            android:hint="@string/flight_notes"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:singleLine="false" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView5a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/flight_type"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/flight_type_norm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".2"
            android:checked="true"
            android:onClick="onCB_G1_Clicked"
            android:text="@string/flight_norm" />

        <CheckBox
            android:id="@+id/flight_type_pass"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".2"
            android:onClick="onCB_G1_Clicked"
            android:text="@string/flight_pass" />

        <CheckBox
            android:id="@+id/flight_type_dona"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".2"
            android:onClick="onCB_G1_Clicked"
            android:text="@string/flight_dona" />

        <CheckBox
            android:id="@+id/flight_type_club"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight=".2"
            android:onClick="onCB_G1_Clicked"
            android:text="@string/flight_club" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <!-- holding for remarks -->
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_weight="1"
            android:background="#FF909090"
            android:padding="5dip" />
    </TableRow>

    <TableRow
        android:layout_weight="1.0"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/flight_edit_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="0"
            android:text="@string/flight_edit_btn" />

        <Button
            android:id="@+id/flight_again_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="4"
            android:text="@string/flight_again_btn" />

        <Button
            android:id="@+id/flight_quit_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_column="7"
            android:text="@string/flight_quit_btn" />
    </TableRow>

</TableLayout>